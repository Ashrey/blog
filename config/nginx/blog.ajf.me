server {
    listen 80;
    listen [::]:80;
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name blog.ajf.me;

    access_log  /var/log/nginx/blog.ajf.me.access.log;
    error_log   /var/log/nginx/blog.ajf.me.error.log;

    root        /var/www/blog.ajf.me;

    location / {
        index       index.php;
        error_page  404 = @rewrite;
    }

    location @rewrite {
        rewrite  .*  /index.php;
    }
    
    location ~ \.php$ {
        include fastcgi_php_passthru;
    }
}
